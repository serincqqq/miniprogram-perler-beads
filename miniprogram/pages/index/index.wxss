/* 校准弹窗样式 */
.calibration-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.calibration-container {
  width: 90%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.calibration-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}

.calibration-title {
  font-size: 18px;
  font-weight: bold;
}

.calibration-close {
  font-size: 24px;
  color: #999;
  padding: 0 10rpx;
}

.calibration-instruction {
  font-size: 14px;
  color: #666;
  text-align: center;
  padding: 10rpx 0;
  margin-bottom: 15rpx;
}

.calibration-image-container {
  position: relative;
  width: 100%;
  height: 300px;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  overflow: hidden;
}

.calibration-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  transform: scale(2);
}

/* 轴线样式 */
.axis {
  position: absolute;
  z-index: 10;
}

.vertical-axis {
  top: 0;
  height: 100%;
  width: 2px;
  background-color: red;
  cursor: ew-resize;
}

.vertical-axis::after {
  content: "";
  position: absolute;
  top: 0;
  left: -15px;
  width: 32px;
  height: 100%;
  z-index: 9;
}

.horizontal-axis {
  left: 0;
  width: 100%;
  height: 2px;
  background-color: red;
  cursor: ns-resize;
}

.horizontal-axis::after {
  content: "";
  position: absolute;
  left: 0;
  top: -15px;
  height: 32px;
  width: 100%;
  z-index: 9;
}

/* 选中区域高亮 */
.selected-area {
  position: absolute;
  background-color: rgba(255, 255, 0, 0.2);
  border: 1px dashed yellow;
  pointer-events: none;
  z-index: 5;
}

