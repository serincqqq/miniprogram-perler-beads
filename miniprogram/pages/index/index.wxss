/* 新增/修改部分 */
.controls {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.control-group {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

button {
  margin: 0;
  min-width: 80rpx;
  line-height: 1.5;
}

.grid-container {
  position: relative;
  width: 300px;
  height: 300px;
  overflow: hidden;
  border: 1px solid #eee;
  touch-action: none;

  /* 禁用默认触摸行为 */
}

.grid-bg {
  position: absolute;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image:
    linear-gradient(to right, rgba(255, 0, 0, 0.3) 1px, transparent 1px),
    linear-gradient(to bottom, rgba(255, 0, 0, 0.3) 1px, transparent 1px);
  pointer-events: none;
  /* 防止遮挡图片操作 */
}

image {
  position: relative;
  z-index: 2;
  transform-origin: 0 0;
  transition: transform 0.3s ease;
  will-change: transform;
  /* 优化动画性能 */
}