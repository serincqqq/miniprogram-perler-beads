/* pages/preview/index.wxss */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
  /* 使页面占满全高 */
  box-sizing: border-box;
}

.zoom-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  gap: 20rpx;
  background: #fff;
}

.zoom-controls text {
  margin: 0 20rpx;
  min-width: 120rpx;
  text-align: center;
}

.zoom-controls button {
  margin: 0 10rpx;
}

.preview-scroll-view {
  flex: 1;
  width: 100%;
  background: #fff;
  /* 占据剩余空间 */
  display: flex;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  background-color: #f0f0f0;
  /* 给滚动区域一个背景色，以区分图片 */
}

.image-wrapper {
  display: flex;
  justify-content: center;
  min-height: 100%;
  padding: 20rpx;
}

.preview-image {
  width: 100%;
  height: auto;
  transform-origin: center top;
  transition: transform 0.3s ease;
}

/* Color Palette Styles */
.color-palette-section {
  background: #fff;
  padding: 20rpx;
  border-top: 1px solid #eee;
}

.color-palette {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 10rpx;
}

.color-block {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border: 1px solid #ddd;
}

.color-code {
  font-size: 20rpx;
  color: #333;
  background: rgba(255, 255, 255, 0.8);
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
}

/* Action Buttons */
.action-buttons {
  padding: 20rpx;
  background: #fff;
  border-top: 1px solid #eee;
}

.export-btn {
  width: 100%;
}

/* Replacement Dialog */
.replacement-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-content {
  width: 90%;
  max-height: 80vh;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.dialog-title {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.replacement-colors {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  max-height: 60vh;
  overflow-y: auto;
  padding: 10rpx;
  margin-bottom: 30rpx;
}

.cancel-btn {
  margin-top: 20rpx;
}